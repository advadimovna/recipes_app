<p id="notice"><%= notice %></p>

<h1>Authors</h1>
<p>Total number of authors <%= @authors.total_entries %><br>
  Authors per page <%= @authors.length %></p>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= sortable "name", "Name" %></th>
      <th><%= sortable "rating", "Rating" %></th>
      <th>Link</th>
      <th>Number of recipes</th>
<!--      <th colspan="3"></th>-->
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= author.rating %></td>
        <td><%= link_to "Link to site",author.link %></td>
        <td><%= author.recipe.ids.length %></td>
<!--        <td><%#= link_to 'Show', author %></td>-->
<!--        <td><%#= link_to 'Edit', edit_author_path(author) %></td>-->
<!--        <td><%#= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @authors , renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
